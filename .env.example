# ============================================
# FlyAndEarn2 Environment Variables
# ============================================
# Copy this file to .env and fill in the values
# All variables marked REQUIRED must be set in production

# --- Database (REQUIRED) ---
DATABASE_URL="postgresql://user:password@host:5432/flyandearn?schema=public"

# --- Authentication (REQUIRED) ---
# Generate with: openssl rand -base64 64
JWT_SECRET="CHANGE-ME-generate-a-strong-random-secret"

# --- Stripe Payments (REQUIRED for payments) ---
STRIPE_SECRET_KEY="sk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
# STRIPE_PUBLISHABLE_KEY is used client-side (set in HTML/JS)

# --- Application (REQUIRED) ---
NODE_ENV="production"
URL="https://flyandearn.eu"

# --- Admin Access (REQUIRED) ---
# Comma-separated list of admin email addresses
ADMIN_EMAILS="admin@flyandearn.eu"

# --- Scheduled Functions Auth (REQUIRED) ---
# Secret for authenticating scheduled/cron function calls
CRON_SECRET="CHANGE-ME-generate-a-random-secret"

