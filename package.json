{
  "name": "flyandearn-netlify",
  "version": "1.0.0",
  "description": "FlyAndEarn frontend with Netlify Functions",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:netlify": "npx netlify-cli dev",
    "build": "npm run build:optimize && prisma generate",
    "build:optimize": "npm run build:clean && npm run build:assets && npm run build:vite && npm run build:analyze",
    "build:clean": "rm -rf dist && mkdir -p dist",
    "build:assets": "npm run optimize:images && npm run generate:webp",
    "build:vite": "vite build && cp main.js sw.js robots.txt sitemap.xml dist/ 2>/dev/null; cp -r icons netlify dist/ 2>/dev/null || true",
    "build:analyze": "npm run analyze:bundle && npm run analyze:performance",
    "preview": "vite preview",
    "lint": "eslint netlify/functions/**/*.js src/**/*.js",
    "lint:fix": "eslint netlify/functions/**/*.js src/**/*.js --fix",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:ci": "node --experimental-vm-modules node_modules/jest/bin/jest.js --ci --coverage",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:all": "npm test && npm run test:e2e",
    "test:load": "artillery run load-test/performance-test.yml",
    "test:load:quick": "artillery run load-test/performance-test.yml --config.phases.0.duration=30",
    "test:load:mobile": "artillery run load-test/performance-test.yml --config.profile=mobile",
    "test:load:stress": "artillery run load-test/performance-test.yml --config.profile=stress",
    "perf:audit": "lighthouse http://localhost:8888 --output=html --output-path=reports/lighthouse.html",
    "perf:monitor": "node scripts/performance-monitor.js",
    "perf:dashboard": "open http://localhost:8888/.netlify/functions/performance-dashboard",
    "optimize:images": "node scripts/optimize-images.js",
    "generate:webp": "node scripts/generate-webp.js",
    "analyze:bundle": "vite-bundle-analyzer dist/assets/*.js",
    "analyze:performance": "node scripts/analyze-performance.js",
    "i18n:check": "node scripts/i18n-check.js",
    "i18n:extract": "echo 'Extract translation keys - TODO'",
    "clean:cache": "rm -rf node_modules/.cache dist .netlify",
    "update:deps": "npm update && npm audit fix"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "jose": "^5.9.6",
    "stripe": "^14.0.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.57.0",
    "artillery": "^2.0.27",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prisma": "^5.22.0",
    "sharp": "^0.34.5",
    "terser": "^5.46.0",
    "vite": "^5.4.21",
    "vite-bundle-analyzer": "^0.11.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "lighthouse": "^12.0.0",
    "web-vitals": "^4.2.4",
    "imagemin": "^8.0.1",
    "imagemin-webp": "^8.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^10.0.0",
    "compression": "^1.7.4",
    "@rollup/plugin-dynamic-import-vars": "^2.1.3",
    "workbox-build": "^7.1.1"
  }
}
